<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.howietian.clubtalk.entrance.forgetpwd.ForgetPwdActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="忘记密码"
            app:titleTextColor="@color/dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/login_input_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:lines="1"
                android:paddingStart="10dp"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_clear_grey_500_24dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/login_input_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_sms_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:hint="短信验证码"
                android:inputType="number"
                android:lines="1"
                android:paddingStart="10dp"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_get_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/sms_bg_selector"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/login_input_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingStart="10dp"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/pwd_visible_selector"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/login_btn_selector"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>