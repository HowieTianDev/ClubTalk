<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="辰言2017活动安排"
        android:textColor="@color/dark"
        android:textSize="@dimen/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_create_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="2017-07-19"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodySmall" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_weight="2"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="@dimen/bodySmall" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/activity_status_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="正在报名"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/caption" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="报名截止日期:  "
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal" />

        <TextView
            android:id="@+id/text_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2017-04-09"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_image" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="主办方"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="辰言"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="活动地点"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辰言"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="活动时间"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辰言"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辰言"
            android:textColor="@color/dark"
            android:textSize="@dimen/bodyNormal"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8dp"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="@dimen/bodyNormal" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_selector"
        android:text="我要报名"
        android:textColor="@color/white"
        android:textSize="@dimen/bodyNormal" />


</LinearLayout>